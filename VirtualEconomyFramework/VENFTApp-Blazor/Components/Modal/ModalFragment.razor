@implements IDisposable

@code {
    [Parameter]
    public RenderFragment ChildContent { get; set; }

    protected override void OnInitialized()
    {
        ModalContainer.Instance?.Add(ChildContent);
    }

    public void Dispose()
    {
        ModalContainer.Instance?.Remove(ChildContent);
    }

    public void Refresh()
    {
        ModalContainer.Instance?.Refresh();
    }
}
