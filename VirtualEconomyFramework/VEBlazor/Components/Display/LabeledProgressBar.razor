
<Field>
    <FieldLabel>@ParameterName</FieldLabel>
    <Progress Min="@Min" Max="@Max" Color="@Color" Value="@(Convert.ToInt32(Value))" Margin="Margin.Is3.FromBottom" Size="Size.Small" />
    <FieldHelp>@(Value)&nbsp;@ParameterUnit</FieldHelp>
</Field>

@code {
    [Parameter]
    public string ParameterName { get; set; } = "Value";
    [Parameter]
    public string ParameterUnit { get; set; } = "Units";
    [Parameter]
    public int Min { get; set; } = 0;
    [Parameter]
    public int Max { get; set; } = 100;
    [Parameter]
    public int RoundDecimals { get; set; } = 2;
    private double _value = 0.0;
    [Parameter]
    public double Value { get => Math.Round( _value, RoundDecimals ); set => _value = value; }
    [Parameter]
    public Color Color { get; set; } = Color.Info;
}
