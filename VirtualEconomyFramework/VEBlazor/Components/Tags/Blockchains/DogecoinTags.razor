@using VEDriversLite.NFT

@if (Match(Text))
{
    <Badge Margin="@Margin" Color="Color.Primary">
            <Image Source="@AppData.DogecoinImageLink" Style="width:11px; max-width:11px; height:11px; max-height:11px; margin-bottom:1px;" />
        &nbsp;#@Text
    </Badge>
}

@code {
    [Parameter]
    public string Text { get; set; } = "Dogecoin";

    [Parameter]
    public IFluentSpacing Margin { get; set; }

    public static bool Match(string tag)
    {
        var text = tag.ToLower();
        if (text.Contains("doge") ||
            text.Contains("dogecoin") ||
            text.Contains("dogearmy") ||
            text.Contains("dogecoinblockchain") ||
            text.Contains("dogeblockchain"))
            return true;
        else
            return false;
    }
}