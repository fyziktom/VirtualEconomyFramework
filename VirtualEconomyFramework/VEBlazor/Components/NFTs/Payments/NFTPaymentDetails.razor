@using VEDriversLite
@using VEDriversLite.NFT
@inject AppData AppData
@inherits NFTDetailsBase;

@if ( NFT != null && NFT.Type == NFTTypes.Payment )
{
    var nft = NFT as PaymentNFT;
    if (nft != null)
    {
        <NFTDetails @ref="NFTDetailsComponent"
                Address="@Address" 
                IsSubAccount="@IsSubAccount" 
                IsOwnNFT="IsOwnNFT" 
                NFT="@NFT" 
                NFTSent="@NFTSentHandler" 
                OpenNFTsInWorkTab="@OpenNFTInWorkTabHandler"
                HideOpenInWorkTabButton="@HideOpenInWorkTabButton"
                SpecificInfoHeading="Payment Details">
        <Field>
            <FieldLabel>Sender</FieldLabel>
            <Button Color="Color.Primary" Type="ButtonType.Link" To="@(string.Concat("https://explorer.nebl.io/address/",nft.Sender))" Target="Target.Blank">Show Sender In Explorer</Button>
        </Field>
        <Field>
            <FieldLabel>NFT Utxo</FieldLabel>
             <Button Color="Color.Primary" Type="ButtonType.Link" To="@(string.Concat("https://explorer.nebl.io/tx/", nft.NFTUtxoTxId))" Target="Target.Blank">Show Tx In Explorer</Button>
        </Field>
        <Field>
            <FieldLabel>Sold Price</FieldLabel>
            <Text>@nft.Price NEBL</Text>
        </Field>
    </NFTDetails>
    }
}

