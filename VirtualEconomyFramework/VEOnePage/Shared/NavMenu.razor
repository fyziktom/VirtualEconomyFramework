</div>


<div class=" navbar-mobile">
    <div class="">
    

        <div class="trending row">
                <a class="navbar-brand" href="">
                    <img src="images/coruzant-logo.png" class="img-responsive" />
                </a>
        </div>
        <div class="container">
            <span class="mobile-toggler" @onclick="ToggleNavMenu">
                <i class="fa fa-bars" aria-hidden="true"></i>
            </span>
        
        <div class="search">
            <input type="text" placeholder="Search " />
        </div>
        </div>



       
    </div>


    <div class="@NavMenuCssClass menu-list" @onclick="ToggleNavMenu">
        <nav class="page-links">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                Home
            </NavLink>         
            <NavLink class="nav-link" href="feature">
                Featured
            </NavLink>
            <NavLink class="nav-link" href="opinion">
                Opinion
            </NavLink>
              <NavLink class="nav-link" href="podcasts">
                Podcasts
            </NavLink>
        </nav>

    </div>

</div>


@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
